{
	"name": "luiz-dk-sveltekit",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "wrangler pages dev .svelte-kit/cloudflare --port 4173",
		"prepare": "bun run types && svelte-kit sync || echo '' && husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "bun run test:unit -- --run",
		"types": "wrangler types",
		"deploy": "CF_PAGES=1 bun run build && CF_PAGES=1 wrangler pages deploy",
		"tail:pages": "wrangler pages deployment tail --project-name luiz-dk-sveltekit",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:migrate:prod": "drizzle-kit migrate --config=drizzle.prod.config.ts",
		"db:push": "drizzle-kit push",
		"clear": "rm -rf node_modules/ .svelte-kit/ .wrangler/ dist/ coverage/ pnpm-lock.yaml bun.lockb bun.lock package-lock.json yarn.lock"
	},
	"lint-staged": {
		"*.{js,ts,svelte,json}": [
			"prettier --write",
			"eslint"
		]
	},
	"devDependencies": {
		"@clerk/backend": "^2.30.1",
		"@clerk/themes": "^2.4.51",
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^9.39.2",
		"@sentry/sveltekit": "^10.38.0",
		"@sveltejs/adapter-cloudflare": "^7.2.6",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^25.2.1",
		"better-sqlite3": "^12.6.2",
		"chart.js": "^4.5.1",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.3.0",
		"hashids": "^2.3.0",
		"husky": "^9.1.7",
		"ioredis": "^5.9.2",
		"lint-staged": "^16.2.7",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.49.2",
		"svelte-check": "^4.3.6",
		"svix": "^1.84.1",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"wrangler": "^4.63.0",
		"zod": "^4.3.6"
	}
}
